<h1>
  Admin dashboard
  <%= link_to sidekiq_web_path, method: :get, class: 'btn btn-default pull-right' do  %>
    <i class="fa fa-area-chart"> Sidekiq</i>
  <% end %>
</h1>
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5>
          w000ts
          <span class="badge pull-right"><%= @total_w000t_number %><span>
        </h5>
      </div>
      <div class="panel-body">
        <dl class="dl-horizontal">
            <% @user_data.each do |pseudo, data| %>
              <dt><%= pseudo %></dt>
              <dd><%= data[:w000t_counts] %></dd>
            <% end %>
        </dl>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5>
          Users
          <span class="badge pull-right"><%= @total_user_number %><span>
        </h5>
      </div>
      <div class="panel-body">

        <table class="table">
          <thead>
            <th>Pseudo</th>
            <th>Connections</th>
            <th>Last seen</th>
          </thead>
          <tbody>
            <% @user_data.each do |pseudo, data| %>
            <tr>
              <td><%= pseudo %></td>
              <td><%= data[:sign_in_count] %></td>
              <td><%= data[:last_sign_in_at] %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5>
          URLs
          <span class="badge pull-right"><%= @total_url_number %><span>
        </h5>
      </div>
      <div class="panel-body">
        <%= link_to admin_check_all_w000ts_path, data: { confirm: 'Sure ?' }, remote: true, method: :post, class: 'btn btn-default' do  %>
          <i class="fa fa-database"> Check all w000ts</i>
        <% end %>
      </div>
    </div>
  </div>
</div>
